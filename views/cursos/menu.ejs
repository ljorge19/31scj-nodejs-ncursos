<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="icon" href="/images/favicon-32x32.png" />
    <title>Cursos</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-primary">

            <a href="#" class="navbar-brand d-flex align-items-center">
                <img class="mr-2" src="/images/logo.png" />
                <strong>Cursos</strong>
            </a>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/novocurso">Novo Curso</a>
                    </li>
                </ul>
                
            </div>

            <span class="navbar-text">
                Bem-vindo, <%- usuario.nome %>
            </span>
            <a class="navbar-text nav-item nav-link" href="/logout">Logout</a>
        </nav>
    </header>

    <main role="main" class="container">
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Curso</th>
                        <th scope="col">Carga Horária</th>
                        <th scope="col">Data de Início</th>
                        <th scope="col">Categoria</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% cursos.forEach(function(curso, index) { %>
                    <tr>
                        <td><%= curso.nome %></td>
                        <td><%= curso.duracao %></td>
                        <td><%= curso.dtinicio %></td>
                        <td><%= curso.categoria %></td>
                        <td>
                            <a href="/editcurso?id=<%= curso._id %>"><img alt="Editar" src="/images/edit.png"></a>&nbsp;
                            <a href="/deletecurso?id=<%= curso._id %>"><img alt="Excluir" src="/images/delete.png"></a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <span class="text-muted">FIAP - 31SCJ</span>
        </div>
    </footer>

    <script src="/javascripts/jquery-3.2.1.slim.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
</body>

</html>